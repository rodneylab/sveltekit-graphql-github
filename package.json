{
	"name": "sveltekit-graphql-github",
	"version": "0.1.0",
	"license": "BSD-3-Clause",
	"description": "Use Apollo Client with SvelteKit to Query a GraphQL API: we use the GitHub API to query our repos and learn a bit of SvelteKit along the way.",
	"scripts": {
		"dev": "vite dev",
		"build": "sh ./patch-apollo-client.sh && vite build",
		"preview": "vite preview",
		"check": "svelte-check --fail-on-warnings",
		"check:watch": "svelte-check --watch",
		"lint": "prettier --check --plugin=prettier-plugin-svelte . && eslint --ignore-path .gitignore .",
		"lint:scss": "stylelint \"src/**/*.{css,scss,svelte}\"",
		"format": "prettier --write --plugin=prettier-plugin-svelte .",
		"prettier:check": "prettier --check --plugin=prettier-plugin-svelte ."
	},
	"devDependencies": {
		"@apollo/client": "3.5.6",
		"@commitlint/config-conventional": "^18.4.3",
		"@fontsource/fira-sans": "^5.0.17",
		"@fontsource/lato": "^5.0.17",
		"@fontsource/merriweather": "^5.0.8",
		"@iconify/svelte": "^3.1.4",
		"@sveltejs/adapter-static": "^2.0.3",
		"@sveltejs/kit": "^1.27.6",
		"commitlint": "^18.4.3",
		"dayjs": "^1.11.10",
		"eslint": "^8.54.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"graphql": "^16.8.1",
		"graphql-tag": "^2.12.6",
		"husky": "^8.0.3",
		"node-fetch": "^2.7.0",
		"postcss": "^8.4.31",
		"postcss-html": "^1.5.0",
		"prettier": "~3.1.0",
		"prettier-plugin-svelte": "^3.1.1",
		"sass": "^1.69.5",
		"stylelint": "^15.11.0",
		"stylelint-config-recommended-scss": "^13.1.0",
		"stylelint-scss": "^5.3.1",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.1",
		"svelte-preprocess": "^5.1.1",
		"vite": "^5.0.2"
	},
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/rodneylab/sveltekit-graphql-github"
	},
	"bugs": {
		"url": "https://github.com/rodneylab/sveltekit-graphql-github/issues"
	},
	"peerDependencies": {
		"graphql": "^16.0.1",
		"vite": "^3.0.2"
	}
}
