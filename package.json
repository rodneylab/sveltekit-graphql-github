{
	"name": "sveltekit-graphql-github",
	"version": "0.1.0",
	"license": "BSD-3-Clause",
	"description": "Use Apollo Client with SvelteKit to Query a GraphQL API: we use the GitHub API to query our repos and learn a bit of SvelteKit along the way.",
	"scripts": {
		"dev": "vite dev",
		"build": "sh ./patch-apollo-client.sh && vite build",
		"preview": "vite preview",
		"check": "svelte-check --fail-on-warnings",
		"check:watch": "svelte-check --watch",
		"lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"lint:scss": "stylelint \"src/**/*.{css,scss,svelte}\"",
		"format": "prettier --write --plugin-search-dir=. .",
		"prettier:check": "prettier --check --plugin-search-dir=. ."
	},
	"devDependencies": {
		"@apollo/client": "3.5.6",
		"@commitlint/config-conventional": "^17.4.3",
		"@fontsource/fira-sans": "^4.5.10",
		"@fontsource/lato": "^4.5.10",
		"@fontsource/merriweather": "^4.5.14",
		"@iconify/svelte": "^3.1.0",
		"@sveltejs/adapter-static": "^2.0.1",
		"@sveltejs/kit": "^1.6.0",
		"commitlint": "^17.4.3",
		"dayjs": "^1.11.7",
		"eslint": "^8.34.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"graphql": "^16.6.0",
		"graphql-tag": "^2.12.6",
		"husky": "^8.0.3",
		"node-fetch": "^2.6.9",
		"postcss": "^8.4.21",
		"postcss-html": "^1.5.0",
		"prettier": "~2.8.4",
		"prettier-plugin-svelte": "^2.9.0",
		"sass": "^1.58.1",
		"stylelint": "^15.1.0",
		"stylelint-config-recommended-scss": "^9.0.1",
		"stylelint-scss": "^4.4.0",
		"svelte": "^3.55.1",
		"svelte-check": "^3.0.3",
		"svelte-preprocess": "^5.0.1",
		"vite": "^4.1.1"
	},
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/rodneylab/sveltekit-graphql-github"
	},
	"bugs": {
		"url": "https://github.com/rodneylab/sveltekit-graphql-github/issues"
	},
	"peerDependencies": {
		"graphql": "^16.0.1",
		"vite": "^3.0.2"
	}
}
