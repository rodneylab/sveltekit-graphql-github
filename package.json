{
  "name": "sveltekit-graphql-github",
  "version": "0.1.0",
  "license": "BSD-3-Clause",
  "description": "Use Apollo Client with SvelteKit to Query a GraphQL API: we use the GitHub API to query our repos and learn a bit of SvelteKit along the way.",
  "scripts": {
    "dev": "vite dev --port 3000",
    "build": "sh ./patch-apollo-client.sh && vite build",
    "preview": "vite preview --port 3000",
    "check": "svelte-check --fail-on-warnings",
    "check:watch": "svelte-check --watch",
    "lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "lint:scss": "stylelint \"src/**/*.{css,scss,svelte}\"",
    "format": "prettier --write --plugin-search-dir=. .",
    "prettier:check": "prettier --check --plugin-search-dir=. ."
  },
  "devDependencies": {
    "@apollo/client": "3.5.6",
    "@commitlint/config-conventional": "^17.0.0",
    "@fontsource/fira-sans": "^4.5.8",
    "@fontsource/lato": "^4.5.8",
    "@fontsource/merriweather": "^4.5.11",
    "@iconify/svelte": "^2.2.1",
    "@sveltejs/adapter-static": "^1.0.0-next.32",
    "@sveltejs/kit": "next",
    "commitlint": "^17.0.1",
    "dayjs": "^1.11.2",
    "dotenv": "^16.0.1",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "graphql": "^15.8.0",
    "graphql-tag": "^2.12.6",
    "husky": "^8.0.1",
    "node-fetch": "^2.6.7",
    "postcss": "^8.4.14",
    "postcss-html": "^1.4.1",
    "prettier": "~2.7.1",
    "prettier-plugin-svelte": "^2.7.0",
    "sass": "^1.52.1",
    "stylelint": "^14.8.5",
    "stylelint-config-recommended-scss": "^7.0.0",
    "stylelint-scss": "^4.2.0",
    "svelte": "^3.48.0",
    "svelte-check": "^2.7.1",
    "svelte-preprocess": "^4.10.6",
    "vite": "^3.0.2"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/rodneylab/sveltekit-graphql-github"
  },
  "bugs": {
    "url": "https://github.com/rodneylab/sveltekit-graphql-github/issues"
  },
  "peerDependencies": {
    "vite": "^3.0.2"
  }
}
